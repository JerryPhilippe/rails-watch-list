<h2 class="fw-bold text-center my-4"><%= @list.name %></h2>
<div class="all-cards">
  <% @list.bookmarks.each do |bookmark|  %>
    <div class="card-trip">
        <%= image_tag(bookmark.movie.poster_url) %>
        <div class="card-trip-infos">
          <div>
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.movie.overview %></p>
          </div>
          <h2 class="card-trip-rating"><%= bookmark.movie.rating %></h2>
          <i class="fa-solid fa-quote-left"></i>
          <h2 class="card-trip-rating"><%= bookmark.comment %></h2>
        </div>
    </div>
  <% end %>
</div>
